<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
	<application>
		<message-bundle>de.randi2.jsf.i18n.labels</message-bundle>
		<message-bundle>enums</message-bundle>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
		<locale-config>
			<default-locale>en_US</default-locale>
			<supported-locale>de_DE</supported-locale>
		</locale-config>
	</application>
	<lifecycle>
		<phase-listener>
			de.randi2.jsf.listener.OpenSessionInViewPhaseListener
		</phase-listener>
	</lifecycle>
	<validator>
		<validator-id>
			de.randi2.jsf.validators.RANDI2_VALIDATOR
		</validator-id>
		<validator-class>
			de.randi2.jsf.validators.RANDI2Validator
		</validator-class>
	</validator>
	<validator>
		<validator-id>
			de.randi2.jsf.validators.PASSWORD_CONFIRMATION
		</validator-id>
		<validator-class>
			de.randi2.jsf.validators.PasswordConfirmation
		</validator-class>
	</validator>

	<converter>
		<converter-id>
			de.randi2.jsf.converters.GENDER_CONVERTER
		</converter-id>
		<converter-class>
			de.randi2.jsf.converters.GenderConverter
		</converter-class>
	</converter>
	<converter>
		<converter-id>
			de.randi2.jsf.converters.TRIALSTATE_CONVERTER
		</converter-id>
		<converter-class>
			de.randi2.jsf.converters.TrialStateConverter
		</converter-class>
	</converter>
	
	<managed-bean>
		<description>
			This glueBean takes care of the Login and Person Beans.
		</description>
		<managed-bean-name>loginHandler</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.handlers.LoginHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>loginDao</property-name>
			<property-class>de.randi2.dao.LoginDao</property-class>
			<value>#{loginDAO}</value>
		</managed-property>
		<managed-property>
			<property-name>mailSender</property-name>
			<property-class>org.springframework.mail.MailSender</property-class>
			<value>#{mailSender}</value>
		</managed-property>
		<managed-property>
			<property-name>personDao</property-name>
			<property-class>de.randi2.dao.PersonDao</property-class>
			<value>#{personDAO}</value>
		</managed-property>
		<managed-property>
			<property-name>centerDao</property-name>
			<property-class>de.randi2.dao.TrialSiteDao</property-class>
			<value>#{centerDAO}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<description>The glueBean for the Center bean.</description>
		<managed-bean-name>trialSiteHandler</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.handlers.TrialSiteHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>centerDao</property-name>
			<property-class>de.randi2.dao.TrialSiteDao</property-class>
			<value>#{centerDAO}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<description>The glueBean for the trial bean.</description>
		<managed-bean-name>trialHandler</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.handlers.TrialHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>trialDao</property-name>
			<property-class>de.randi2.dao.TrialDao</property-class>
			<value>#{trialDAO}</value>
		</managed-property>
		<managed-property>
			<property-name>centerDao</property-name>
			<property-class>de.randi2.dao.TrialSiteDao</property-class>
			<value>#{centerDAO}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<description>
			This bean has all needed attributes for the register
			page.
		</description>
		<managed-bean-name>registerPage</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.pages.RegisterPage
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<description>
			This bean has all needed attributes for the randi2 page.
		</description>
		<managed-bean-name>randi2Page</managed-bean-name>
		<managed-bean-class>
			de.randi2.jsf.pages.Randi2Page
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<description>
			This bean has all important strings for the application.
		</description>
		<managed-bean-name>randi2</managed-bean-name>
		<managed-bean-class>de.randi2.jsf.Randi2</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<description>
			This bean contains the functionality for managing the
			user's rights.
		</description>
		<managed-bean-name>rightsPanel</managed-bean-name>
		<managed-bean-class>de.randi2.jsf.pages.RightsPanel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<description>
			This bean controls the file upload. (Trial protocol
			uplaod)
	</description>
		<managed-bean-name>inputFileController</managed-bean-name>
		<managed-bean-class>de.randi2.jsf.fileupload.InputFileController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<display-name>randi2</display-name>
		<from-view-id>/randi2.jspx</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.logoutUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/loginSecure.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>refresh</display-name>
		<from-view-id>/randi2.jspx</from-view-id>
		<navigation-case>
			<from-outcome>refresh</from-outcome>
			<to-view-id>/randi2.jspx</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>register</display-name>
		<from-view-id>/register.jspx</from-view-id>
		<navigation-case>
			<from-outcome>ok</from-outcome>
			<to-view-id>/loginSecure.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
</faces-config>
