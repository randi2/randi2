<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>


	<application>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
	</application>


	<managed-bean>
		<managed-bean-name>userHandler</managed-bean-name>
		<managed-bean-class>
			com.myicetest.handlers.UserHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>user</property-name>
			<property-class>com.myicetest.models.User</property-class>
			<value>#{user}</value>
		</managed-property>
		<managed-property>
			<property-name>userDao</property-name>
			<property-class>
				com.myicetest.dao.UserDaoHibernate
			</property-class>
			<value>#{userDao}</value>
		</managed-property>
	</managed-bean>


	<navigation-rule>
		<display-name>login</display-name>
		<from-view-id>/login.jspx</from-view-id>
		<navigation-case>
			<from-action>#{userHandler.loginUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/randi2.jspx</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>randi2</display-name>
		<from-view-id>/randi2.jspx</from-view-id>
		<navigation-case>
			<from-action>#{userHandler.logoutUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/logout.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

</faces-config>
