<ice:form partialSubmit="true" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ice="http://www.icesoft.com/icefaces/component">
	<ice:panelGrid border="0" columns="2">
		<ice:graphicImage value="/img/icons/trialSite48.png"></ice:graphicImage>
		<ice:outputLabel value="#{labels['pages.trialSitesViewPanel.headline']} (#{labels['pages.trialSitesViewPanel.headline2']} #{trialSiteHandler.trialSitesAmount})"></ice:outputLabel>
	</ice:panelGrid>
	<ice:dataTable id="trialSitesTable" border="1"
		value="#{trialSiteHandler.allTrialSites}" var="trialSite" scrollable="true"
		scrollHeight="250px" columnWidths="150px,150px,100px,100px,35px" width="550px">
		<ice:column id="column1">
			<ice:outputText value="#{trialSite.name}"></ice:outputText>
			<f:facet name="header">
				<ice:outputText value="#{labels['trialSite.name']}" id="nameH"  style="width:150px;"></ice:outputText>
			</f:facet>
		</ice:column>
		<ice:column id="column2">
			<ice:outputText value="#{trialSite.street}"></ice:outputText>
			<f:facet name="header">
				<ice:outputText value="#{labels['trialSite.street']}" id="streetH" style="width:150px;"></ice:outputText>
			</f:facet>
		</ice:column>
		<ice:column id="column3">
			<ice:outputText value="#{trialSite.city}"></ice:outputText>
			<f:facet name="header">
				<ice:outputText value="#{labels['trialSite.city']}" id="cityH" style="width:100px;"></ice:outputText>
			</f:facet>
		</ice:column>
		<ice:column id="column4">
			<ice:outputText value="#{trialSite.postcode}"></ice:outputText>
			<f:facet name="header">
				<ice:outputText value="#{labels['trialSite.postcode']}" id="postcodeH" style="width:100px;"></ice:outputText>
			</f:facet>
		</ice:column>
		<ice:column id="column5">
			<ice:commandLink id="showId" value="#{labels['buttons.show']}"
				actionListener="#{randi2Page.showTrialSite}">
				<ice:outputText value="#{trialSite}" visible="false"></ice:outputText>
			</ice:commandLink>
			<f:facet name="header">
				<ice:outputText value="" id="showH" style="width:50px;"></ice:outputText>
			</f:facet>
		</ice:column>
	</ice:dataTable>

</ice:form>
