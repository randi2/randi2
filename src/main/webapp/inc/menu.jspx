<ice:form partialSubmit="true" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ice="http://www.icesoft.com/icefaces/component">
	<ice:menuBar orientation="vertical">
		<ice:menuItem value="#{labels['pages.menu.user']}">
			<ice:menuItem value="#{labels['pages.menu.personalDetails']}" actionListener="#{randi2Page.myLogin}"/>
			<ice:menuItem value="#{labels['pages.menu.preferences']}">
			<ice:menuItem value="#{labels['pages.menu.language']}">
			<!-- The Locale-Selection section -->
			<ice:menuItem icon="/img/icons/locale/us.png" value="#{labels['pages.menu.en_us']}" action="refresh" actionListener="#{loginHandler.setUSEnglish}" immediate="true"/>
			<ice:menuItem icon="/img/icons/locale/de.png" value="#{labels['pages.menu.de_de']}" action="refresh" actionListener="#{loginHandler.setDEGerman}" immediate="true"/>
			</ice:menuItem>
			</ice:menuItem>
			<ice:menuItem value="#{labels['pages.menu.logout']}" action="#{loginHandler.logoutUser}" />
			<ice:menuItemSeparator></ice:menuItemSeparator>
			<ice:menuItem value="#{labels['pages.menu.create']}" actionListener="#{randi2Page.createLogin}"/>	
		</ice:menuItem>
		<ice:menuItem value="#{labels['pages.menu.trial']}">
			<ice:menuItem value="#{labels['pages.menu.currentTrial']}" />
			<ice:menuItem value="#{labels['pages.menu.myTrials']}" />
			<ice:menuItemSeparator></ice:menuItemSeparator>
			<ice:menuItem value="#{labels['pages.menu.create']}" actionListener="#{randi2Page.createTrial}"/>
		</ice:menuItem>
		<ice:menuItem value="#{labels['pages.menu.center']}">
			<ice:menuItem value="#{labels['pages.menu.myCenter']}" actionListener="#{randi2Page.myCenter}"/>
			<ice:menuItem value="#{labels['pages.menu.allCenters']}" actionListener="#{randi2Page.viewCenters}"/>
			<ice:menuItemSeparator></ice:menuItemSeparator>
			<ice:menuItem value="#{labels['pages.menu.create']}" actionListener="#{randi2Page.createCenter}" renderOnUserRole="ROLE_ADMIN"/>
		</ice:menuItem>
		<ice:menuItemSeparator></ice:menuItemSeparator>
		<ice:menuItem value="#{labels['pages.menu.search']}" />
		<ice:menuItem value="#{labels['pages.menu.help']}" action="#{randi2Page.showHelp}"/>
		<ice:menuItem value="#{labels['pages.menu.about']}" action="#{randi2Page.showAbout}"/>
		
	</ice:menuBar>
</ice:form>
